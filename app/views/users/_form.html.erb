<%= form_with model: user, local: true do |f| %>

    <div class="field<%= ' field_with_errors' if user.errors[:first_name].any? %>">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %><br>
    </div>

    <div class="field<%= ' field_with_errors' if user.errors[:last_name].any? %>">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %><br>
    </div>

    <div class="field<%= ' field_with_errors' if user.errors[:email].any? %>">
        <%= f.label :email %>
        <%= f.email_field :email %><br>
    </div>

    <div class="field<%= ' field_with_errors' if user.errors[:password].any? %>">
        <%= f.label :password %>
        <%= f.password_field :password %><br>
    </div>

    <div class="field<%= ' field_with_errors' if user.errors[:password_confirmation].any? %>">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %><br>
    </div>

        <%= f.label :gi_skill %>
        <%= f.select :gi_skill, gi_levels %>
        <%= f.label :nogi_skill %>
        <%= f.select :nogi_skill, nogi_levels %>
        <%= f.label :weight %>
        <%= f.select :weight, (130..250) %><br>

    <%= f.submit %>
<% end %>