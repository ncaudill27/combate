<h1><%= @user.full_name %></h1>

<%= render 'flash' %>

<h3>
    Weight Class: 
    <%= @user.weight_class %><br>
    Gi Level: 
    <%= @user.gi_skill %><br>
    No Gi Level: 
    <%= @user.nogi_skill %><br>

</h2>

<h2><%= link_to "Bookmarked", bookmarks_path(@user) %></h2>

<h2>Tournaments</h2>

<ul>
<% @user.tournaments.each do |tournament| %>
<li>
    <!-- Another use for tournament partial -->
        <%= render 'tournament', {tournament: tournament} %>
        <%= link_to "Edit", edit_tournament_path(tournament) %>
        <%= button_to "Delete", tournament, method: :delete %><br><br>
    </li>
<% end %>
</ul>
<%= link_to "Edit Profile", edit_user_path(@user) %>
<%= button_to "Delete #{@user.full_name}", @user, method: :delete %>